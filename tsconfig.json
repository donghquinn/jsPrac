{
  "compilerOptions": {
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./src/singletonEx/types"
    ],
    "lib": ["ES2021"],
    "allowJs": true,
    "strict": true, 
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "src",
  },
  "include": ["./src/**/*", "./playbook/*"],
  "ts-node": {
    "files": true
  }
}