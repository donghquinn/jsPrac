{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ES2021"],
    "allowJs": false,
    "strict": true, 
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "ts-node": {
      "files": true
    },
  }
}
